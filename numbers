
#include<stdio.h>

void main()
{
   int x,y,z;
    printf("enter a numbers x,y,z");
    scanf("%d %d %d", &x, &y , &z);
    printf("x=%d\ty=%d\tz=%d\n",x ,y, z);
   if(x>y)
  {
     if(x>z)
     {
        printf("x is the greatest among three");
     }
     else
      {
         printf("z is greatest among three");
      }
  }
  else
  if(y>z)
  {
      printf("y is greatest among three");
  }
    else
     {
       printf("z is greatest among three");
    getch();
}
